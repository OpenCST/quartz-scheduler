<?xml version="1.0" encoding="UTF-8"?>

<assembly>
  <id>dist</id>
  <formats>
    <format>zip</format>
    <format>tar.gz</format>
    <format>tar.bz2</format>
  </formats>

  <moduleSets>
    <moduleSet>
      <binaries>
        <dependencySets>
          <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
            <useProjectArtifact>false</useProjectArtifact>
            <useProjectAttachments>false</useProjectAttachments>
            <excludes>
              <exclude>org.quartz-scheduler:*</exclude>
            </excludes>
          </dependencySet>
        </dependencySets>
        <unpack>false</unpack>
      </binaries>
    </moduleSet>
  </moduleSets>

  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <excludes>
        <exclude>**/target/**</exclude>
        <exclude>src/**</exclude>
        <exclude>**/.*</exclude>
        <exclude>**/.*/**</exclude>
        <exclude>**/*.iml</exclude>
        <exclude>src-header.txt</exclude>
        <exclude>suppressions.xml</exclude>
      </excludes>
    </fileSet>
    <!--
    <fileSet>
      <includes>
        <include>**/target/*.jar</include>
      </includes>
    </fileSet>
    -->
  </fileSets>
</assembly>
